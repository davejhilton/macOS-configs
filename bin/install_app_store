#! /usr/bin/env bash

# Installs App Store software.

if ! command -v mas > /dev/null; then
  printf "ERROR: Mac App Store CLI (mas) can't be found.\n"
  printf "       Please ensure Homebrew and mas (i.e. brew install mas) have been installed first."
  exit 1
fi

##### NOTE:
#####  you can find these App identifiers by opening an app's homepage in the App Store,
#####  then using the "Share" button to "Copy Link". The identifier is the numeric portion
#####  at the end of the url.
#####  e.g., for this url:
#####    https://apps.apple.com/us/app/1password-7-password-manager/id1333542190?mt=12
#####  the identifier would be:
#####    1333542190


# 1Password
mas install 1333542190

# Bear
mas install 1091189122

# Classic Color Meter
mas install 451640037

# Coin Tick
mas install 1141688067

# DaisyDisk
mas install 411643860

# Dato
mas install 1470584107

# DisplayMaid
mas install 450063525

# GarageBand
mas install 682658836

# Hand Mirror
mas install 1502839586

# iMovie
mas install 408981434

# iStat Menus
mas install 1319778037

# Keynote
mas install 409183694

# Numbers
mas install 409203825

# Pages
mas install 409201541

# Pixelmator Pro
mas install 1289583905

# Slack
mas install 803453959

# The Unarchiver
mas install 425424353

# Webcam Settings app
mas install 533696630

# Wireguard
mas install 1451685025





