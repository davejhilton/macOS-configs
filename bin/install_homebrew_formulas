#! /usr/bin/env bash

# Installs Homebrew software.

if ! command -v brew > /dev/null; then
  /bin/bash -c "$(curl --location --fail --silent --show-error https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
  export PATH="/usr/local/bin:$PATH"
  printf "%s\n" "export PATH=\"/usr/local/bin:$PATH\"" >> "$HOME/.bash_profile"
fi

brew install mas # required for installing App Store apps later

brew install ansible
brew install dive
brew install go
brew install highlight
brew install jq
brew install libssh2
brew install mysql-client
brew install ncdu
brew install ncurses
brew install nebula
brew install nomad
brew install oniguruma
brew install pack
brew install pcre
brew install pgcli
brew install readline
brew install rsync
brew install rust
brew install shellcheck
brew install sqlite
brew install telnet
brew install the_silver_searcher
brew install tig
brew install tree
brew install vim
brew install watch
brew install waypoint
brew install wget
brew install zsh-syntax-highlighting

